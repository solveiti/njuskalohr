# MySQL Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=njuskalohr
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password
DATABASE_URL=mysql+pymysql://your_username:your_password@localhost:3306/njuskalohr

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Python Virtual Environment
VENV_PATH=.venv

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Authentication Configuration
AUTH_USERNAME=admin
AUTH_PASSWORD=your_secure_password_here
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Endpoints Configuration (for frontend)
API_BASE_URL=http://localhost:8000
API_LOGIN_ENDPOINT=/login
API_LOGOUT_ENDPOINT=/logout
API_SCRAPE_START_ENDPOINT=/scrape/start
API_SCRAPE_TUNNEL_ENDPOINT=/scrape/tunnel
API_SCRAPE_TEST_ENDPOINT=/scrape/test
API_SCRAPE_STATUS_ENDPOINT=/scrape/status
API_SCRAPE_CANCEL_ENDPOINT=/scrape/cancel
API_CLEANUP_ENDPOINT=/cleanup/excel-files
API_TASKS_RECENT_ENDPOINT=/tasks/recent
API_DATA_SEND_ENDPOINT=/api/send-data
API_PUBLISH_ENDPOINT=/publish



# Njuskalo Scraping Configuration
NJUSKALO_BASE_URL=https://www.njuskalo.hr
NJUSKALO_SITEMAP_INDEX_URL=https://www.njuskalo.hr/sitemap-index.xml
NJUSKALO_STORES_SITEMAP_URL=https://www.njuskalo.hr/sitemap-index-stores.xml
NJUSKALO_STORES_XML_GZ_URL=https://www.njuskalo.hr/sitemap-stores-01.xml.gz

# External Test URLs (for testing connectivity)
TEST_IP_CHECK_URL=http://httpbin.org/ip
TEST_GOOGLE_URL=https://www.google.com

# Apache Proxy Configuration (URLs with /njuskalo prefix for reverse proxy)
APACHE_BASE_PATH=/njuskalo
APACHE_DASHBOARD_URL=/njuskalo/dashboard
APACHE_LOGIN_URL=/njuskalo/login
APACHE_DOCS_URL=/njuskalo/docs
APACHE_REDOC_URL=/njuskalo/redoc

# Dober Avto API Configuration
DOBER_API_BASE_URL=https://www.doberavto.si/internal-api/v1/
DOBER_API_KEY=your_api_key_here
DOBER_API_TIMEOUT=5000

# Sentry Configuration
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0